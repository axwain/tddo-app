{
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "ignorePatterns": [
    "node_modules/",
    "client/",
    ".vscode/",
    "coverage/",
    ".yarn/"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  }
}
